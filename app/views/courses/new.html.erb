<div class="m-4 md:container">
  <%= simple_form_for @course, html: { class: "bg-gray-100 w-full shadow-md rounded px-8 pt-6 pb-8 mb-4" } do |f| %>
    <%= f.input :name, required: false, wrapper_html: { class: "mb-4" }, label_html: { class: "block text-gray-900 mb-2" }, input_html: { class: "shadow bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-gray-900 leading-tight focus:bg-white focus:outline-none focus:shadow-outline" } %>
    <div class="flex justify-center">
      <%= f.button :button, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
